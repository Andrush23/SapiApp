<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.boti.sapiapp.Login">

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="107dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:hint="Password"/>

    <Button
        android:id="@+id/forgotButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password"
        android:layout_marginTop="13dp"
        android:background="@null"
        android:text="Forgot your password?"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgotButton"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Sign in" />

    <Button
        android:id="@+id/gotoMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gotoRegisterButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:text="Acces without registering!"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gotoMain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:padding="20dp"></com.google.android.gms.common.SignInButton>

    <Button
        android:id="@+id/gotoRegisterButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:text="Not yet registered? Register HERE!"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark" />

</RelativeLayout>
